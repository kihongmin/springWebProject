<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.repository.LoginRepository">
  <select id="login" resultType="String">
    select password from member where id=#{id}
  </select>
  <insert id="add">
    insert into member 
    (id,pw,name,email,phone,address) 
    values (#{id},#{pw},#{name},#{email},#{phone},#{address})
  </insert>
  
  <select id="searchAll" resultType="com.ssafy.dto.User">
    select id,pw,name,email,phone,address 
    from member
  </select>
  <select id="search" resultType="com.ssafy.dto.User">
    select id,pw,name,email,phone,address 
    from member 
    where id=#{id}
  </select>
  <update id="update">
    update member set pw=#{pw},name=#{name},email=#{email},phone=#{phone},address=#{address} 
    where id=#{id}
  </update>
  <delete id="delete">
    delete from member 
    where id=#{id}
  </delete>
</mapper>